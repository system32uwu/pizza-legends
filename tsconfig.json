{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": [
        "./data/*"
      ],
      "@logger": [
        "./logger"
      ],
      "@pl-types": [
        "./types"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./data/**/*",
    "./types/**/*",
    "./src/**/*",
    "./logger/**/*",
  ]
}